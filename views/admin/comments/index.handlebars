<h1>Comments</h1>
<table class="table table-bordered">
    <thead class="black white-text">
        <tr>
            <th>Id</th>
            <th>Owner</th>
            <th>Status</th>
            <th>Date</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
            <tr>
                <td>{{id}}</td>
                <td>{{user.firstName}}</td>
                <td><input data-id="{{id}}" type="checkbox" {{#if approveComment}} checked {{/if}}
                        name="approveComment"></td>
                <td>{{GenerateDate date 'MMMM Do YYYY'}}</td>

                <td><a href="/admin/comments/edit/{{id}}" class="btn btn-info">Edit</a></td>
                <td>
                    <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>